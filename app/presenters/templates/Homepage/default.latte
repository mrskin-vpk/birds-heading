{block content}
<h1 n:block="title">Přehled</h1>
{*
    {foreach $posts as $post}
    <div class="post">
        <div class="date">{$post->datetime|date:'F j, Y'}</div>

		<h2><a n:href="Post:show $post->id">{$post->file}</a></h2>

        <div>{$post->bird}</div>
		
		<div>{$post->body}</div>
		<div>{$post->head}</div>
    </div>
    {/foreach}
*}
{var $filled = 0}
{var $skipped = 0}
{var $notFilledCount = 0}
{var $totalCount = 0}
<table  class="stats">
	<tr>
		<th>Hotovo</th>
		<th>Přeskočeno</th>
		<th>Zbývá</th>
		<th>Celkem</th>
		<th>Lokalita</th>
		<th>Rok</th>
		<th>Měsíc</th>
		<th></th>
		<th></th>
		<th></th>
	</tr>
	{foreach $posts as $post}
		<tr>
			<td>{$post->filled}</td>
			<td>{$post->skipped}</td>
			<td>{$post->notFilled}</td>
			<td>{$post->total}</td>
			<td>{$post->place}</td>
			<td>{$post->year}</td>
			<td>{$post->month}</td>
			<td><a n:href="Post:yearMonth $post->year, $post->month">Vyplňovat</a></td>
			<td><a n:href="Post:yearMonthSkipped $post->year, $post->month, 0">  Přeskočené</a></td>
			<td><a n:href="Post:yearMonthDone $post->year, $post->month, 0">  Vyplněné</a></td>
		</tr>

		{var $notFilledCount = $notFilledCount + $post->notFilled}
		{var $totalCount = $totalCount + $post->total}
		{var $filled = $filled + $post->filled}
		{var $skipped = $skipped + $post->skipped}
    {/foreach}
	<tr class="totals">
		<th>{$filled}</th>
		<th>{$skipped}</th>
		<th>{$notFilledCount}</th>
		<th>{$totalCount}</th>
		<th></th>
		<th></th>
		<th></th>
		<th></th>
		<th></dh>
		<th></th>
	</tr>

</table>
{/block}